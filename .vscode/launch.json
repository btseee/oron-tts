{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Prepare Dataset",
            "type": "debugpy",
            "request": "launch",
            "module": "scripts.prepare",
            "args": [
                "--output-dir", "data/processed",
                "--dataset", "all",
                "--max-samples", "100"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Train Local",
            "type": "debugpy",
            "request": "launch",
            "module": "scripts.train",
            "args": [
                "--config", "configs/vits_local.yaml",
                "--data-dir", "data/processed",
                "--log-dir", "logs",
                "--checkpoint-dir", "checkpoints"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "Train from HF",
            "type": "debugpy",
            "request": "launch",
            "module": "scripts.train",
            "args": [
                "--config", "configs/vits_local.yaml",
                "--from-hf",
                "--dataset", "btsee/oron-tts-dataset"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Inference",
            "type": "debugpy",
            "request": "launch",
            "module": "scripts.infer",
            "args": [
                "--checkpoint", "checkpoints/vits_best.pt",
                "--text", "Сайн байна уу",
                "--speaker", "0",
                "--output", "output.wav"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
